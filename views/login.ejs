<!DOCTYPE html>
<html lang="en">
<%- include('header.ejs') %>
<body>
<%- include('navbar1.ejs') %>

<main class="container login-form">
    <form class="shadow" action="/login" method="post">

    <h2 class="text-center">Log in</h2>
    <div class="form-group">
    <input type="email" class="form-control" name="email" placeholder="E-mail" minlength="4" maxlength="25" required autofocus>
    </div>

    <div class="form-group">
    <input type="password" class="form-control" name="password" placeholder="Password" minlength="4" maxlength="20" autocomplete="new-password" required>
    </div>

    <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block">Log in</button>
    </div>

    <div class="clearfix">
    <a href="/password-help" class="pull-right">Forgot password?</a>
    <a href="/register">Sign up, here</a>
    </div>
    </form>

    <%if (err === "yes") { %>
        <p style="color: red; text-align:center;"> Wrong e-mail or password inserted.</p>
    <% } %>
</main>
<%- include('footer.ejs') %>
</body>
</html>
