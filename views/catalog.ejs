<!DOCTYPE html>
<html lang="en">

<%- include('header.ejs') %>

<body class="container shadow bg">

<%- include('navbar.ejs') %>

<main class="container row text-center" role="main">
  <div class="col-md-2 text-center">
    Search by category: <br> <br>
    <%if (typeof carsArr !== "undefined" && carsArr !== null) { %>
    <ul class="list-group">
      <% carsArr.forEach( (cr) => { %>
      <li class="list-group-item">
      <a href="/data/<%= cr.type %>">
        <%= cr.type %>
      </a>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </div>

  <div class="col-sm panel-body tab-content text-left">
  <div id="all" class="tab-pane active">
  <% if (typeof carArr !== "undefined" && carArr !== null) { %>
  <div class="cars_container card-deck-wrapper card-deck">
    <% carArr.forEach( (car) => { %>
    <div class="card text-center">
    <img class="card-img-top img-fluid mx-auto d-block"
      src="/<%= car.photo %>" alt="<%= car.model %> image">

    <p class="card-text">
      <strong>
        <em> <%= car.model %> </em>
      </strong>
      <br />
      <a href="/data/<%= car.brand %>">
        <%= car.brand %>
      </a>
      - <%= car.year %>
      <br />
      <em><%= car.price %>&#36;</em>
    </p>
    <a href="/vehicle/<%= car.idCar %>"
      class="btn btn-primary btn-block mt-auto">
      More
    </a>
    </div>
    <% }) %>
  </div>
  <% } %>
  </div>
  </div>
</main>

<%- include('footer.ejs') %>

</body>
</html>
